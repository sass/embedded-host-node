{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "useUnknownInCatchVariables": false,
    "resolveJsonModule": true,
    "declaration": false,
    "lib": ["DOM"],
    "skipLibCheck": true
  },
  "include": ["lib/**/*.ts", "tool/*.ts"],
  "exclude": ["**/*.test.ts", "lib/src/vendor/dart-sass/**"]
}
