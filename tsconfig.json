{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "module": "node20",
    "moduleResolution": "node16",
    "allowJs": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": ".",
    "useUnknownInCatchVariables": false,
    "declarationDir": "_types",
    "lib": ["DOM"]
  },
  "include": [
    "package.json",
    "*.ts",
    "bin/*.ts",
    "lib/**/*.ts",
    "tool/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": ["lib/src/vendor/dart-sass/**"]
}
